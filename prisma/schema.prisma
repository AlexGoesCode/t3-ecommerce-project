// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
  
model Product{
  id String @id @default(uuid())  //* uuid() = universal unique id
  name                   String 
  priceInCents           Int      //* Integer Values - whole numbers, priceInCents = no rounding errors.
  filePath               String
  imagePath              String
  description            String
  isAvailableForPurchase Boolean          @default(true)
  createdAt              DateTime         @default(now())
  updatedAt              DateTime         @updatedAt
  order Order[]


}

model User {
  id                     String           @id @default(uuid())
  email                  String           @unique 
  createdAt              DateTime         @default(now())
  updatedAt              DateTime         @updatedAt
  orders  Order[]
}

model Order {
  id                     String           @id @default(uuid())
  PricePaidInCents       Int              //* PricePaidInCents: for tracking price history
  createdAt              DateTime         @default(now())
  updateAt               DateTime         @updatedAt

  userId    String
  productId String
  user      User  @relation(fields: [userId], references: [id], onDelete: Cascade)  //* if you delete a user -> delete his orders.
  product   Product @relation(fields: [productId], references: [id], onDelete: Restrict)
}

model DownloadVerification {
  id                     String           @id @default(uuid())
  PricePaidInCents       Int              
  createdAt              DateTime         @default(now())
  updateAt               DateTime         @updatedAt
}